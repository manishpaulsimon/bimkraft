---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pricing - BIM Kraft Tools">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-blue-50 to-white dark:from-gray-900 dark:to-gray-800 py-20">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Simple, Transparent Pricing
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-4 max-w-2xl mx-auto">
