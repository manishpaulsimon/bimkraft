<Window x:Class="BIMKraft.Commands.WorksetTools.WorksetManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BIMKraft.Commands.WorksetTools"
        Title="BIMKraft Workset Manager"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Value Converter -->
        <local:NullToBooleanConverter x:Key="NullToBooleanConverter"/>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Preset Loading -->
        <GroupBox Header="Quick Start" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Load Preset:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <ComboBox Grid.Column="1" Name="PresetComboBox" DisplayMemberPath="WorksetName" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Load Preset" Style="{StaticResource SecondaryButton}"
                        Click="LoadPreset_Click" Margin="0,0,10,0" Padding="20,8"/>
                <Button Grid.Column="3" Content="Load All Presets" Style="{StaticResource ModernButton}"
                        Click="LoadAllPresets_Click" Padding="20,8"/>
            </Grid>
        </GroupBox>

        <!-- Main Content: Split View -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Workset Configurations List -->
            <GroupBox Header="Workset Configurations" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" Name="WorksetConfigurationsGrid"
                              SelectionChanged="WorksetConfigurationsGrid_SelectionChanged"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="âœ“" Binding="{Binding Enabled}" Width="40"/>
                            <DataGridTextColumn Header="Workset Name" Binding="{Binding WorksetName}" Width="*"/>
                            <DataGridTextColumn Header="Rules" Binding="{Binding Rules.Count}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="+ Add Workset" Style="{StaticResource ModernButton}"
                                Click="AddWorkset_Click" Margin="0,0,10,0" Padding="15,8"/>
                        <Button Content="âœŽ Edit" Style="{StaticResource SecondaryButton}"
                                Click="EditWorkset_Click" IsEnabled="{Binding ElementName=WorksetConfigurationsGrid, Path=SelectedItem, Converter={StaticResource NullToBooleanConverter}}"
                                Margin="0,0,10,0" Padding="15,8"/>
                        <Button Content="ðŸ—‘ Delete" Style="{StaticResource DangerButton}"
                                Click="DeleteWorkset_Click" IsEnabled="{Binding ElementName=WorksetConfigurationsGrid, Path=SelectedItem, Converter={StaticResource NullToBooleanConverter}}"
                                Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Right: Configuration Details -->
            <GroupBox Header="Configuration Details" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Workset Info -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Workset Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,10,5" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="WorksetNameTextBox" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Top" Margin="0,5,10,5" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="DescriptionTextBox"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="50" Margin="0,5,0,5"/>

                            <CheckBox Grid.Row="2" Grid.Column="1" Name="EnabledCheckBox" Content="Enabled"
                                      Margin="0,5,0,0" IsChecked="True"/>
                        </Grid>
                    </StackPanel>

                    <!-- Rules DataGrid -->
                    <GroupBox Grid.Row="1" Header="Assignment Rules" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" Name="RulesGrid" Margin="0,0,0,10">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="âœ“" Binding="{Binding Enabled}" Width="40"/>
                                    <DataGridTextColumn Header="Rule Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="120"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding RuleValue}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="+ Add Rule" Style="{StaticResource ModernButton}"
                                        Click="AddRule_Click" Margin="0,0,10,0" Padding="15,8"/>
                                <Button Content="âœŽ Edit Rule" Style="{StaticResource SecondaryButton}"
                                        Click="EditRule_Click" IsEnabled="{Binding ElementName=RulesGrid, Path=SelectedItem, Converter={StaticResource NullToBooleanConverter}}"
                                        Margin="0,0,10,0" Padding="15,8"/>
                                <Button Content="ðŸ—‘ Delete Rule" Style="{StaticResource DangerButton}"
                                        Click="DeleteRule_Click" IsEnabled="{Binding ElementName=RulesGrid, Path=SelectedItem, Converter={StaticResource NullToBooleanConverter}}"
                                        Padding="15,8"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Save Changes Button -->
                    <Button Grid.Row="2" Content="ðŸ’¾ Save Changes to Configuration"
                            Style="{StaticResource SuccessButton}"
                            Click="SaveChanges_Click"
                            IsEnabled="{Binding ElementName=WorksetConfigurationsGrid, Path=SelectedItem, Converter={StaticResource NullToBooleanConverter}}"
                            HorizontalAlignment="Stretch" Padding="15,10"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Bottom Section: Action Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0"
                Padding="0,15,0,0" Margin="-15,15,-15,-15">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center"
                               Foreground="#6C757D" FontStyle="Italic"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ“‹ Preview Changes" Style="{StaticResource SecondaryButton}"
                            Click="Preview_Click" Margin="0,0,10,0" Padding="20,10"/>
                    <Button Content="â–¶ Apply Worksets" Style="{StaticResource SuccessButton}"
                            Click="Apply_Click" Margin="0,0,10,0" Padding="25,10" FontWeight="SemiBold"/>
                    <Button Content="Close" Style="{StaticResource SecondaryButton}"
                            Click="Close_Click" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
