<Window x:Class="BIMKraft.UI.Licensing.LicenseActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIMKraft License Activation"
        Width="600" Height="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E3A8A"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#6B7280"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Header Section -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="License Activation" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Activate your BIMKraft license or start a free 30-day trial"
                               Style="{StaticResource SubHeaderTextStyle}" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Current License Status -->
                <Border Style="{StaticResource StatusBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="Current License Status" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Status -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,0,10,8"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="#EF4444" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="StatusText" Text="No active license" FontWeight="SemiBold"/>
                            </StackPanel>

                            <!-- License Type -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,0,10,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LicenseTypeText" Text="-" Margin="0,0,0,8"/>

                            <!-- Expiry/Remaining -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Remaining:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RemainingDaysText" Text="-"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- License Key Activation Section -->
                <Border Style="{StaticResource StatusBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="Activate License Key" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Enter your license key to activate BIMKraft"
                                   FontSize="12" Foreground="#6B7280" Margin="0,0,0,12"/>

                        <TextBlock Text="License Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="LicenseKeyTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 TextChanged="LicenseKeyTextBox_TextChanged"
                                 MaxLength="34"
                                 FontFamily="Consolas"
                                 Text="BIMK-XXXX-XXXX-XXXX-XXXX-XXXX"/>

                        <TextBlock x:Name="ValidationMessage"
                                   Margin="0,5,0,0"
                                   FontSize="11"
                                   Foreground="#EF4444"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>

                        <Button x:Name="ActivateButton"
                                Content="Activate License"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ActivateButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,15,0,0"
                                IsEnabled="False"/>
                    </StackPanel>
                </Border>

                <!-- Trial Section -->
                <Border Style="{StaticResource StatusBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="Free Trial" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#6B7280" Margin="0,0,0,12">
                            <Run Text="New to BIMKraft? Start a free 30-day trial with full access to all features."/>
                        </TextBlock>

                        <Button x:Name="StartTrialButton"
                                Content="Start 30-Day Free Trial"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="StartTrialButton_Click"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Purchase & Deactivate Section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Don't have a license?" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Button x:Name="PurchaseButton"
                            Content="Purchase BIMKraft"
                            Style="{StaticResource LinkButtonStyle}"
                            Click="PurchaseButton_Click"/>
                </StackPanel>

                <Button x:Name="DeactivateButton"
                        Content="Deactivate License"
                        Background="Transparent"
                        Foreground="#EF4444"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="DeactivateButton_Click"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        FontSize="11"
                        Visibility="Collapsed">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       TextDecorations="Underline"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Close Button -->
                <Button Content="Close"
                        Click="CloseButton_Click"
                        Padding="25,10"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Background="#E5E7EB"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
