<Window x:Class="BIMKraft.Windows.ParameterTransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIM Kraft Parameter Transfer Pro"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DodgerBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="CategoryTabStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="BIM Kraft Parameter Transfer Pro" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Map and transfer parameter values between built-in/project parameters and custom parameters by category"
                      Style="{StaticResource SubHeaderTextStyle}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Presets Section -->
        <GroupBox Grid.Row="1" Header="Presets" Margin="0,0,0,15" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="PresetsComboBox"
                         Grid.Column="0"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         SelectionChanged="PresetsComboBox_SelectionChanged"/>

                <Button Grid.Column="1"
                       Content="Load Preset"
                       Click="LoadPresetButton_Click"
                       Style="{StaticResource SecondaryButtonStyle}"/>

                <Button Grid.Column="2"
                       Content="Save Preset"
                       Click="SavePresetButton_Click"
                       Style="{StaticResource SecondaryButtonStyle}"/>

                <Button Grid.Column="3"
                       Content="Delete Preset"
                       Click="DeletePresetButton_Click"
                       Style="{StaticResource SecondaryButtonStyle}"/>
            </Grid>
        </GroupBox>

        <!-- Main Content - Category Tabs -->
        <TabControl x:Name="CategoryTabControl" Grid.Row="2" Margin="0,0,0,15">
            <!-- Tabs will be dynamically generated -->
        </TabControl>

        <!-- Transfer Options -->
        <GroupBox Grid.Row="3" Header="Transfer Options" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <CheckBox x:Name="OverwriteExistingCheckBox"
                         Content="Overwrite existing target parameter values"
                         Margin="0,0,0,8"
                         IsChecked="False"
                         ToolTip="If checked, existing values in target parameters will be overwritten. If unchecked, only empty target parameters will be filled."/>

                <CheckBox x:Name="OnlyNonEmptySourceCheckBox"
                         Content="Transfer only non-empty source values"
                         Margin="0,0,0,8"
                         IsChecked="True"
                         ToolTip="If checked, only source parameters with values will be transferred."/>

                <CheckBox x:Name="ShowDetailedLogCheckBox"
                         Content="Show detailed log after transfer"
                         IsChecked="True"
                         ToolTip="If checked, a detailed log of all transfers will be shown after completion."/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
            <TextBlock x:Name="StatusTextBlock"
                      Text=""
                      VerticalAlignment="Center"
                      Margin="0,0,15,0"
                      FontSize="12"
                      Foreground="DarkBlue"/>
            <Button Content="Transfer Parameters"
                   Click="TransferParametersButton_Click"
                   Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Close"
                   Click="CloseButton_Click"
                   Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
