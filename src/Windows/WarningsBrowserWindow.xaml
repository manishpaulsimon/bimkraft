<Window x:Class="BIMKraft.Windows.WarningsBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIM Kraft Warnings Browser Pro"
        Width="1600" Height="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C5AA0"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2C5AA0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E3A6F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="15" Margin="0,0,0,15"
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,2">
            <StackPanel>
                <TextBlock Text="BIM Kraft Warnings Browser Pro" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Style="{StaticResource SubHeaderTextStyle}">
                    <Run Text="Advanced warning analysis and resolution tool"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Statistics Dashboard -->
        <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,15"
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Total Warnings" FontSize="11" Foreground="Gray"/>
                        <TextBlock x:Name="TotalWarningsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#DC3545"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Unique Types" FontSize="11" Foreground="Gray"/>
                        <TextBlock x:Name="UniqueTypesText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Affected Elements" FontSize="11" Foreground="Gray"/>
                        <TextBlock x:Name="AffectedElementsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Selected" FontSize="11" Foreground="Gray"/>
                        <TextBlock x:Name="SelectedCountText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filter and Search Section -->
        <Border Grid.Row="2" Background="White" Padding="15" Margin="0,0,0,10"
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Search Warnings:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged"
                             Padding="8,5" Background="White" BorderBrush="#CCCCCC"/>
                    <TextBlock Text="Type to filter warnings by message, element names, or IDs"
                               FontSize="10" Foreground="Gray" Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Filter by Category:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CategoryFilterComboBox" SelectionChanged="CategoryFilter_Changed"
                              Padding="8,5" Background="White"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Orientation="Horizontal">
                    <Button Content="Clear Filters" Click="ClearFilters_Click"
                            Style="{StaticResource SecondaryButtonStyle}" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Warnings DataGrid -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <DataGrid x:Name="WarningsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowHeight="35"
                      AlternatingRowBackground="#F9F9F9"
                      SelectionChanged="WarningsDataGrid_SelectionChanged"
                      MouseDoubleClick="WarningsDataGrid_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Binding="{Binding ExpandSymbol}" Width="40" CanUserResize="False"/>
                    <DataGridTextColumn Header="Warning Message" Binding="{Binding Message}" Width="350"/>
                    <DataGridTextColumn Header="Occurrences" Binding="{Binding OccurrenceCount}" Width="90" CanUserResize="False"/>
                    <DataGridTextColumn Header="Elements" Binding="{Binding ElementCount}" Width="80" CanUserResize="False"/>
                    <DataGridTextColumn Header="Element IDs" Binding="{Binding ElementIds}" Width="120"/>
                    <DataGridTextColumn Header="Element Names" Binding="{Binding ElementNames}" Width="200"/>
                    <DataGridTextColumn Header="Levels" Binding="{Binding Levels}" Width="150"/>
                    <DataGridTextColumn Header="Views" Binding="{Binding Views}" Width="150"/>
                    <DataGridTextColumn Header="Categories" Binding="{Binding Categories}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="4" Background="White" Padding="15" Margin="0,15,0,0"
                BorderBrush="#E0E0E0" BorderThickness="1,1,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Options Row -->
                <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                    <CheckBox x:Name="AutoHighlightCheckBox" Content="Auto-Highlight on Selection"
                              IsChecked="True" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <CheckBox x:Name="SaveHighlightsCheckBox" Content="Save Highlights"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <CheckBox x:Name="GroupWarningsCheckBox" Content="Group Similar Warnings"
                              IsChecked="True" VerticalAlignment="Center" Margin="0,0,20,0"
                              Checked="GroupWarnings_Changed" Unchecked="GroupWarnings_Changed"/>
                </WrapPanel>

                <!-- Buttons Row -->
                <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
                    <Button Content="Highlight Selected" Click="HighlightButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                    <Button Content="Clear Highlights" Click="ClearHighlightsButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Clear All" Click="ClearAllHighlightsButton_Click"
                            Style="{StaticResource DangerButtonStyle}"/>
                    <Button Content="Zoom (Current View)" Click="ZoomCurrentViewButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Zoom (All Views)" Click="ZoomAllViewsButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Show in 3D" Click="ShowIn3DButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Export HTML" Click="ExportHtmlButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Export Excel" Click="ExportExcelButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </WrapPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
